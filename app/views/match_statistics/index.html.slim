span.card.border.border-light
  .card-header.text-center
    h3 Match statistics
  .card-body
    table.table
      tr
        th.col-md-2.text-center Player
        th.col-md-2.text-center Team
        th.col-md-2.text-center Match Date
        th.col-md-2.text-center Distance covered, km
        th.col-md-2.text-center Productivity, %

        - @match_statistics.each do |stat|
          tr
            td.col-md-2.text-center
              b = stat.player.first_name
              '  
              b = stat.player.last_name

            td.col-md-2.text-center
              = stat.player.team.title

            td.col-md-2.text-center
              = stat.match.date.to_s(:long)
              
            td.col-md-2.text-center
              - if stat.distance_completed?
                .success = stat.distance_covered
              - else
                .fail = stat.distance_covered

            td.col-md-2.text-center
              - if stat.productivity_completed?                
                .success = stat.productivity
              - else
                .fail = stat.productivity
hr
